<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/templ_labeled_et_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/templ_labeled_et"
        android:layout_alignBottom="@+id/templ_labeled_et"
        android:layout_alignParentStart="true"
        android:minWidth="72dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="Label name" />

    <EditText
        android:id="@+id/templ_labeled_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/templ_labeled_et_tv"
        android:inputType="textAutoComplete"
        tools:text="text content" />

    <TextView
        android:id="@+id/templ_labeled_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/templ_labeled_et"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        tools:text="Error" />

</RelativeLayout>