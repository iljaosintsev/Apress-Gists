<?xml version="1.0" encoding="utf-8"?>
<com.turlir.abakgists.widgets.SwitchLayout
    android:id="@+id/gist_act_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gist.GistActivity"
    app:init="loading">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/head_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:transitionName="@string/avatar_transition_tag"
                tools:background="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_owner_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/iv_avatar"
                android:text="@string/owner"
                android:textAppearance="@style/TitleTextAppearance" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_owner_hint"
                android:layout_below="@+id/tv_owner_hint"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:textAppearance="@style/FieldTextAppearance"
                tools:text="turlir" />

            <com.turlir.abakgists.widgets.VectorButton
                android:id="@+id/btn_web"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="false"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/web_link"
                android:textAllCaps="false"
                app:backgroundTint="?attr/colorPrimary"
                app:drawableLeftCompat="@drawable/ic_link" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/desc_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/desc"
                android:textAppearance="@style/FieldTextAppearance" />

            <EditText
                android:id="@+id/et_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_text_area_selector"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:textAppearance="@style/FieldTextAppearance"
                tools:text="Star wars intro text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/note"
                android:textAppearance="@style/FieldTextAppearance" />

            <EditText
                android:id="@+id/et_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_text_area_selector"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:paddingTop="16dp"
                android:textAppearance="@style/FieldTextAppearance"
                tools:text="Long long far away" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/save" />

    </LinearLayout>

    <com.turlir.abakgists.widgets.VectorTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/half_margin"
        android:text="@string/main_network_error"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:drawableTopCompat="@drawable/ic_main_network_error" />

    <com.turlir.abakgists.widgets.VectorTextView
        android:id="@+id/in_loading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/half_margin"
        android:layout_gravity="center"
        android:text="@string/in_loading"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:animateDrawableTopCompat="@drawable/animation_loading"/>

</com.turlir.abakgists.widgets.SwitchLayout>