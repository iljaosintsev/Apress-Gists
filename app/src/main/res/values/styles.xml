<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimary</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AllInOneTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimary</item>
    </style>

    <style name="WhiteActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FieldTextAppearance" parent="TextAppearance.AppCompat.Subhead" />

    <style name="WhiteButtonOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#FFF</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
