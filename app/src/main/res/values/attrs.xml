<resources>

    <declare-styleable name="SwitchLayout">
        <attr name="init" format="enum">
            <enum name="content" value="0"/>
            <enum name="error" value="1"/>
            <enum name="loading" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SwitchLayout_Layout">
        <attr name="hided" format="enum">
            <enum name="gone" value="4"/>
            <enum name="invisible" value="8"/>
        </attr>
    </declare-styleable>

</resources>